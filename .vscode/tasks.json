{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "x86_64-w64-mingw32-g++",
            "args": [
                "-g", "-Wno-deprecated-declarations",
                "demo_player.cpp", 
                "-I", ".\\include", 
                "-o", "${workspaceRoot}\\demo_player.exe",
                "-static",
                "-L.\\lib",
                "-lavformat.dll", 
                "-lavcodec.dll", 
                "-lavutil.dll", 
                "-lavfilter.dll", 
                "-lswscale.dll", 
                "-lavdevice.dll", 
                "-lswresample.dll",
                ".\\lib\\SDL2.lib",
                ".\\lib\\SDL2main.lib",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}